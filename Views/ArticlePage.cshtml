@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ArticlePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master.cshtml";
}


<!-- Home page -->
<div class="medicalcenter_page template_container container_padding" id="medicalcenter_page" data-templatename="medical_center">

    <!-- Main content -->
    <a href="javascript:;" id="maincontent" tabindex="-1" class="skip_content_link"></a>

    <!-- Two col section -->
    <section class="twocol_section page_head">
        <div class="innerpage">
            <div class="row">

                <div class="page_top">
                    <img src="media/images/logo_dark.png" alt="רפאל" class="logo_print" />
                    <a href="@Model.Value("articleLink")" class="go_back "><span class="icon icon-arrow_right"></span><span class="label">@Model.Value("articleLinkLabel")</span></a>
                    <h1 class="title_section title-1 sm-splittext">@Model.Value("articleTitle")</h1>
                    <ul class="jobs_list clear">
                        <li>@Model.Value("articleAuthor")</li>
                        <li>@Model.Value("articleAuthorRole")</li>
                    </ul>
                    <div class="article_desc title-5">@Model.Value("articleDescriptionTitle")</div>
                </div>

                <div class="left_side">
                    <div class="inner">
                        <div class="image sm-global sm-imagereveal parallax" data-smprop='{"type":"class","threshold":0.15}' data-translatey="0.35" data-ease="0.09"><div class="bg parallax-move"><div class="cover" style="background-image:url('media/images/pictures/24.jpg');"></div></div></div>
                    </div>
                </div>

                <div class="content font_l">
                    <h3 class="title-5">@Model.Value("innerTitle1")</h3>
                    <p>@Model.Value("innerContent1")</p>
                    <h3 class="title-5">@Model.Value("innerTitle2")</h3>
                    <p>@Model.Value("innerContent2")</p>
                    <div class="video_box mix_video">
                        <a href="javascript:;" class="inner play_video" aria-label="נגן סרטון">
                            <div class="bg cover" style="background-image: url('media/images/pictures/25.jpg');"></div>
                            <div class="play_btn"></div>
                            <div class="bottom">
                                <div class="name font_xl">ד״ר רוגובסקי רותם</div>
                                <h4 class="title-2">מידע גם על שאר הבדיקות בהריון</h4>
                            </div>
                        </a>
                        <div class="iframe_cont" data-youtube-id="Bey4XXJAqS8"></div>
                    </div>
                    <h3 class="title-5">@Model.Value("secContentTitle1")</h3>
                    <div class="p">
                        @Model.Value("secContentDescription1")
                        <ul class="list-dots">
                            <li>@Model.Value("secListItem1")</li>
                            <li>@Model.Value("secListItem2")</li>
                        </ul>
                    </div>
                    <h3 class="title-5">@Model.Value("thirdContentTitle")</h3>
                    <div class="p">
                        @Model.Value("thirdContentDescription")
                        <br>
                        @Model.Value("thirdContentDescription2")
                        <ul class="list-nums">
                            <li>@Model.Value("thirdContentListItem1")</li>
                            <li>@Model.Value("thirdContentListItem2")</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
        <div id="sticky_end"></div>
    </section>

    <!-- Posts section -->
    <section class="posts_section experts_section" id="posts_section">
        <div class="innerpage">
            <div class="row">
                <h2 class="title_section title-2 sm-global sm-splittext" data-smprop='{"type":"split","threshold":0.02}'>אולי יעניין אותך גם</h2>
                <div class="carousel sm-global sm-fadein" data-smprop='{"type":"class","threshold":0.1}'>
                    <div class="item carousel-cell">
                        <a href="#" class="inner" aria-label="עבור לרופא">
                            <div class="in">
                                <div class="bg"><div class="cover" style="background-image: url('media/images/pictures/10.jpg');"></div></div>
                                <div class="bottom">
                                    <h3 class="title title-5">רפאל המרכז הרפואי החדש</h3>
                                    <div class="desc">פיתוח היכולת להכיר את דפוסי ההכרה ולהשקיט אותה; לחדד את יכולת החשיבה הבהירה ולחוות נוכחות, יצירתיות ונינוחות בתוך העשייה.</div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="item carousel-cell">
                        <a href="#" class="inner" aria-label="עבור לרופא">
                            <div class="in">
                                <div class="bg"><div class="cover" style="background-image: url('media/images/pictures/11.jpg');"></div></div>
                                <div class="bottom">
                                    <h3 class="title title-5">רפאל המרכז הרפואי החדש</h3>
                                    <div class="desc">פיתוח היכולת להכיר את דפוסי ההכרה ולהשקיט אותה; לחדד את יכולת החשיבה הבהירה ולחוות נוכחות, יצירתיות ונינוחות בתוך העשייה.</div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="item carousel-cell">
                        <a href="#" class="inner" aria-label="עבור לרופא">
                            <div class="in">
                                <div class="bg"><div class="cover" style="background-image: url('media/images/pictures/12.jpg');"></div></div>
                                <div class="bottom">
                                    <h3 class="title title-5">רפאל המרכז הרפואי החדש</h3>
                                    <div class="desc">פיתוח היכולת להכיר את דפוסי ההכרה ולהשקיט אותה; לחדד את יכולת החשיבה הבהירה ולחוות נוכחות, יצירתיות ונינוחות בתוך העשייה.</div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="btn_cont sm-global sm-fadein" data-smprop='{"type":"class","threshold":0.1}'><a href="#" class="btn btn_outline"><span>לבלוג המלא</span></a></div>
            </div>
        </div>
    </section>

    <!-- Lead section -->
    <section class="lead_section side_section" id="lead_section">
        <div class="innerpage">
            <div class="row">
                <div class="image sm-global sm-imagereveal parallax" data-smprop='{"type":"class","threshold":0.15}' data-translatey="0.35" data-ease="0.09"><div class="bg parallax-move"><div class="cover" style="background-image:url('media/images/pictures/13.jpg');"></div></div></div>
                <div class="content">
                    <div class="table">
                        <div class="table-cell">
                            <h2 class="title_section title-2 sm-global sm-splittext" data-smprop='{"type":"split","threshold":0.02}'>מעוניינים להתייעץ איתנו?</h2>
                            <p class="paragraph sm-global sm-fadein" data-smprop='{"type":"class","threshold":0.1}'><strong class="font_xl">השאירו לנו פרטים ונחזור אליכם בקרוב</strong><br />השדות המסומנים בכוכבית, הנם שדות חובה.</p>
                            <form class="form_ui font_m clear sm-global sm-fadein" data-smprop='{"type":"class","threshold":0.1}'>
                                <div class="input_c must">
                                    <div class="input">
                                        <input type="text" id="input_1" class="input_text" required />
                                        <label for="input_1" class="label">שם פרטי</label>
                                    </div>
                                </div>
                                <div class="input_c must">
                                    <div class="input">
                                        <input type="text" id="input_2" class="input_text" required />
                                        <label for="input_2" class="label">שם משפחה</label>
                                    </div>
                                </div>
                                <div class="input_c must">
                                    <div class="input">
                                        <input type="text" id="input_3" class="input_text" required />
                                        <label for="input_3" class="label">טלפון</label>
                                    </div>
                                </div>
                                <div class="input_c must">
                                    <div class="input">
                                        <input type="text" id="input_4" class="input_text" required />
                                        <label for="input_4" class="label">דוא"ל</label>
                                    </div>
                                </div>
                                <div class="input_c">
                                    <select class="cselect" data-placeholder="נושא הפנייה">
                                        <option>נושא הפנייה</option>
                                        <option value="נושא 1">נושא 1</option>
                                        <option value="נושא 2">נושא 2</option>
                                        <option value="נושא 3">נושא 3</option>
                                        <option value="נושא 4">נושא 4</option>
                                        <option value="נושא 5">נושא 5</option>
                                    </select>
                                </div>
                                <div class="input_c">
                                    <div class="input input_textarea">
                                        <textarea id="input_6" class="input_text" rows="1"></textarea>
                                        <label for="input_6" class="label">על מה תרצו לדבר איתנו</label>
                                    </div>
                                </div>
                                <div class="sep"></div>
                                <div class="input_c">
                                    <div class="checkbox font_r"><input type="checkbox" name="checkbox" /><label>אני מסכימ/ה להיות בקשר במייל או סמס</label></div>
                                </div>
                                <div class="input_submit input_c clear">
                                    <button type="submit" class="btn"><span>שליחה</span></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>